<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tableview.PersonaController">
   <children>
      <Button fx:id="btnAgregar" layoutX="25.0" layoutY="396.0" mnemonicParsing="false" onAction="#agregarPersona" prefHeight="25.0" prefWidth="149.0" text="Agregar persona" />
       <Button fx:id="btnEliminar" layoutX="412.0" layoutY="517.0" mnemonicParsing="false" onAction="#eliminarPersona" prefHeight="25.0" prefWidth="149.0" text="Eliminar" />
       <Button fx:id="btnModificar" layoutX="600.0" layoutY="517.0" mnemonicParsing="false" onAction="#modificarPersona" prefHeight="25.0" prefWidth="149.0" text="Modificar" />

      <TextField fx:id="txtNombre" layoutX="25.0" layoutY="88.0" />
      <Label layoutX="25.0" layoutY="53.0" text="Nombre" />

      <Label layoutX="23.0" layoutY="140.0" text="Apellidos" />
      <TextField fx:id="txtApellidos" layoutX="25.0" layoutY="174.0" />

      <TextField fx:id="txtEdad" layoutX="25.0" layoutY="257.0" />
      <Label layoutX="21.0" layoutY="230.0" text="Edad" />

       <TextField fx:id="txtTelf" layoutX="25.0" layoutY="340.0" />
       <Label layoutX="25.0" layoutY="312.0" text="Telf" />

      <TableView fx:id="tblPersonas" layoutX="220.0" layoutY="67.0" onMouseClicked="#seleccionarPersona" prefHeight="306.0" prefWidth="550.0">
        <columns>
          <TableColumn fx:id="colNombre" prefWidth="147.0" text="Nombre" />
          <TableColumn fx:id="colApellidos" prefWidth="145.0" text="Apellidos" />
            <TableColumn fx:id="colEdad" prefWidth="105.0" text="Edad" />
            <TableColumn fx:id="colTelf" prefWidth="150.0" text="Telefono" />
        </columns>
      </TableView>

   </children>
</AnchorPane>
